@model DomainModels.Product

@{
    ViewData["Title"] = "Create";
}
<div class="jumbotron border border-light rounded m-5 p-4">
    <div class="container w-75 border  border-secondary rounded mb-lg-1" style="background-color:#9bcbb8">
            
                    <form asp-action="Create" enctype="multipart/form-data" class="justify-content-lg-between mt-2">
                        @*<div asp-validation-summary="All" class="text-danger"></div>*@

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Name" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Code" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Available" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                @*<input asp-for="Available" min="@DateTime.Now" class="form-control" />*@
                                <input asp-for="Available" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" type="date" />
                                <span asp-validation-for="Available" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Price" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Price" min="0" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Rating" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Rating" max="5" min="0" class="form-control" />
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Image" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Image" type="file" class="form-control-file" name="Image" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Description" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                            <div class="col-8">
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>


            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
