@model IEnumerable<DomainModels.Product>

    @{
    ViewData["Title"] = "Index";
    }

    <form method="get" asp-action="Index">
        <p>
            <input type="search" placeholder="Enter name..." value="@ViewData["GetProductDetails"]" name="ProdSearch" style="width:500px" required />
            <input type="submit" value="Search" class="btn btn-primary" />
            <a class="btn btn-outline-primary" asp-action="Index">Get All products</a>
        </p>
    </form>

    <div class="row">
        @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header"  style="background-color:cadetblue">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px;color: white">@product.Name</label>
                    </h4>
                </div>
                <img src="~/Images/@product.Image" alt="Card Image" class="card-img-top" style="height: 200px;width:200px" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px;color: #a51313"><b>Price : $@product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Customer" asp-route-id="@product.Id" class="btn btn-info">Deatils</a>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
